#!/usr/bin/env bash

echo "Installing clean submodule"

mv .git/modules .   && \
rm -rf .git/        && \
git init            && \
mv modules .git/    && \
git add jaoss       && \
git add .           && \
rm $0

echo "Submodule installed"

git status

echo "Please perform a commit now; e.g. git commit -m 'initial commit'"
